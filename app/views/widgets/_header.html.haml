.uk-container.uk-container-center
  .uk-margin-top.uk-margin-bottom
    = image_tag "logo.png", style: "height: 30px"
    - if moderator_signed_in?
      = link_to "退出登录", destroy_moderator_session_path, method: :delete, class: "uk-button uk-button-danger uk-float-right"
      = link_to uk_icon(:home) + "回到首页", root_path, class: "uk-button uk-float-right uk-margin-right"

    - else
      = link_to "登录", new_moderator_session_path, class: 'uk-button uk-button-danger uk-float-right', role: 'button'
      = link_to "注册", new_moderator_registration_path, class: 'uk-button uk-button-warning uk-float-right uk-margin-right'
